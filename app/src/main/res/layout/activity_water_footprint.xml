<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WaterFootprintActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <ImageButton
                    android:id="@+id/back"
                    android:layout_width="34dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:contentDescription="Back Icon"
                    android:src="@drawable/back" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Analysis &amp; Water Footprint"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </LinearLayout>




            <ImageView
                android:id="@+id/waterFootprintImage"
                android:layout_width="match_parent"
                android:layout_height="281dp"
                android:contentDescription="Water Footprint Image"
                android:scaleType="centerCrop"
                android:src="@drawable/wateranalyse" />


            <TextView
                android:id="@+id/question1"
                android:layout_width="363dp"
                android:layout_height="67dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:gravity="left"
                android:text="ðŸ’§ How many Showers did you take today?"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <EditText
                    android:id="@+id/inputShowersPerDay"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="2"
                    android:background="@color/babyBlue"
                    android:gravity="center"
                    android:hint="Enter number"
                    android:inputType="number" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="per day" />
            </LinearLayout>


            <TextView
                android:id="@+id/question2"
                android:layout_width="wrap_content"
                android:layout_height="51dp"
                android:layout_gravity="center"
                android:layout_marginTop="36dp"
                android:gravity="left"
                android:text="ðŸ’§ What is the average length of each shower?"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/inputLengthOfShower"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="2"
                    android:background="@color/babyBlue"
                    android:gravity="center"
                    android:hint="Enter time in minutes"
                    android:inputType="number" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="minutes" />
            </LinearLayout>

            <TextView
                android:id="@+id/question3"
                android:layout_width="wrap_content"
                android:layout_height="94dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:gravity="left"
                android:text="ðŸ’§ Did you clean you house today? If so how many liters of water did you use when mopping or cleaning floors?"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/inputhouseusage"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="2"
                    android:background="@color/babyBlue"
                    android:gravity="center"
                    android:hint="Enter 0 if you didnt do this activity"
                    android:inputType="number" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="litres" />
            </LinearLayout>


            <TextView
                android:id="@+id/question4"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:gravity="left"
                android:text="ðŸ’§ How many times did you brush your teeth or shave?"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/inputdetails"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="2"
                    android:background="@color/babyBlue"
                    android:gravity="center"
                    android:hint="Enter number"
                    android:inputType="number"
                    tools:ignore="TouchTargetSizeCheck" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="per day" />
            </LinearLayout>

            <TextView
                android:id="@+id/question5"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:gravity="left"
                android:text="ðŸ’§ Did you leave the tap running when brushing your teeth or shaving?"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/radioGroupTapRunning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioYes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:text="Yes" />

                    <RadioButton
                        android:id="@+id/radioNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="160dp"
                        android:text="No" />
                </RadioGroup>
            </LinearLayout>

            <TextView
                android:id="@+id/question6"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:gravity="left"
                android:textColor="@color/black"
                android:text="ðŸ’§ How many loads of laundry did you do today?"
                android:textSize="16dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/inputlaundrydetails"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="2"
                    android:background="@color/babyBlue"
                    android:gravity="center"
                    android:hint="Enter number of loads"
                    android:inputType="number"
                    tools:ignore="TouchTargetSizeCheck" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="per day" />
            </LinearLayout>

            <TextView
                android:id="@+id/question7"
                android:layout_width="397dp"
                android:layout_height="100dp"
                android:layout_gravity="left"
                android:layout_marginTop="30dp"
                android:gravity="left"
                android:text="ðŸ’§ Are there any cultural or family events that affect your water usage today(e.g., large family gatherings, festivals)?"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/radioGroupEvent"
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioTYes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:text="Yes"
                        tools:ignore="TouchTargetSizeCheck" />

                    <RadioButton
                        android:id="@+id/radioTNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="160dp"
                        android:text="No"
                        tools:ignore="TouchTargetSizeCheck" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/amountUsedInput"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="2"
                    android:layout_marginTop="20dp"
                    android:background="@color/babyBlue"
                    android:hint="Enter water amount used"
                    android:textAlignment="center"
                    android:inputType="number"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/amountUsed"
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="30dp"
                    android:text="litres"
                    android:visibility="gone"/>
            </LinearLayout>

            <TextView
                android:id="@+id/question8"
                android:layout_width="wrap_content"
                android:layout_height="84dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:text="ðŸ’§ If you washed your dishes by hand how many times are the dishes washed?"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/inputdisheswashed"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="2"
                    android:background="@color/babyBlue"
                    android:gravity="center"
                    android:hint="Enter zero if using a dishwasher"
                    android:inputType="number" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="times" />
            </LinearLayout>

            <TextView
                android:id="@+id/question9"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:gravity="left"
                android:textColor="@color/black"
                android:text="ðŸ’§ How long did the water run during each wash?"
                android:textSize="16dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/inputwash"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="2"
                    android:background="@color/babyBlue"
                    android:gravity="center"
                    android:hint="Enter number"
                    android:inputType="number" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="minutes" />
            </LinearLayout>


            <!-- Calculate Button -->
            <Button
                android:id="@+id/btnCalculateFootprint"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginTop="20dp"
                android:background="@color/blue"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="Calculate my Water Footprint" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>